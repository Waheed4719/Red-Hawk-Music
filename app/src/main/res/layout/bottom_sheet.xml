<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bottomSheet"
    android:background="@drawable/bottom_drawer_shape"
    app:behavior_hideable = "false"
    app:behavior_peekHeight="60dp"
    android:elevation="8dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >


    <LinearLayout
        android:id="@+id/drawerpull"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#233048"
        android:padding="5dp"
        android:elevation="8dp"
        >



        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/dua_lipa"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/audiowide"
                android:id="@+id/song_title"
                android:text="Don't Start Now"
                android:textColor="@android:color/white"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:fontFamily="@font/audiowide"
                android:text="Dua Lipa"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <ImageView
            android:id="@+id/prev_btn_mini"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="4dp"
            android:elevation="9dp"
            android:background="@drawable/ic_skip_previous_black_24dp"/>

        <ImageView
            android:id="@+id/play_btn_mini"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="4dp"
            android:elevation="9dp"
            android:background="@drawable/ic_play_arrow_black_24dp"/>

        <ImageView
            android:id="@+id/next_btn_mini"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="4dp"
            android:elevation="9dp"
            android:background="@drawable/ic_skip_next_black_24dp"/>

    </LinearLayout>


    <ImageView

        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/red"
        android:elevation="18dp"
        />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't Start Now"
        android:textAlignment="center"
        android:textSize="22sp"
        android:fontFamily="@font/audiowide"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dua Lipa"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/audiowide"
        android:textColor="@android:color/white"
        android:alpha="0.6"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/cur_time"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_width="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="35dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_repeat_black_24dp"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_shuffle_black_24dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/full_time"
            android:text="02:00"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/seekbar"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:elevation="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/prev_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:elevation="8dp"
            android:background="@drawable/ic_skip_previous_black_24dp"/>

        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:elevation="8dp"
            android:background="@drawable/ic_play_arrow_black_24dp"/>

        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:elevation="8dp"
            android:background="@drawable/ic_skip_next_black_24dp"/>
    </LinearLayout>





</LinearLayout>